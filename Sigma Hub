local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Sigma Hub",
   Icon = "sigma",
   LoadingTitle = "Please Wait",
   LoadingSubtitle = "",
   Theme = "Default",

   DisableRayfieldPrompts = false,
   DisableBuildWarnings = false,

   ConfigurationSaving = {
      Enabled = true,
      FolderName = nil,
      FileName = "Big Hub"
   },

   Discord = {
      Enabled = false,
      Invite = "noinvitelink",
      RememberJoins = true
   },

   KeySystem = false,
   KeySettings = {
      Title = "Sigma Hub | Key System",
      Subtitle = "Key System",
      Note = "Grab your key here! https://pastebin.com/kxB768SG",
      FileName = "OhPlop_SigmaTrueFile_Ploppi",
      SaveKey = false,
      GrabKeyFromSite = false,
      Key = {"Z13LuvwT52+F2-a-12dy/dx^5"}
   }
})

-- Scripts Tab
local ScriptsTab = Window:CreateTab("Scripts", "scroll-text")

ScriptsTab:CreateButton({
   Name = "Sigma Hub | Blade Ball",
   Callback = function()
      loadstring(game:HttpGet("https://raw.githubusercontent.com/yourlinkhere"))()
   end
})

ScriptsTab:CreateButton({
   Name = "Sigma Hub | Math Murder",
   Callback = function()
      local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

      local Window = Rayfield:CreateWindow({
         Name = "Sigma Hub | Math Murder",
         Icon = "sigma",
         LoadingTitle = "Please Wait",
         LoadingSubtitle = "We are setting everything up",
         Theme = "Default",

         DisableRayfieldPrompts = false,
         DisableBuildWarnings = false,

         ConfigurationSaving = {
            Enabled = true,
            FolderName = nil,
            FileName = "Big Hub"
         },

         Discord = {
            Enabled = false,
            Invite = "noinvitelink",
            RememberJoins = true
         },

         KeySystem = false,
         KeySettings = {
            Title = "Untitled",
            Subtitle = "Key System",
            Note = "No method of obtaining the key is provided",
            FileName = "Key",
            SaveKey = true,
            GrabKeyFromSite = false,
            Key = {"Hello"}
         }
      })

      local MainTab = Window:CreateTab("Main", "home")

      MainTab:CreateButton({
         Name = "Show Answers",
         Callback = function()
            loadstring(game:HttpGet("https://rawscripts.net/raw/Math-Murder-Reveal-Answer-29160"))()
         end,
      })
   end
})

-- Other Scripts Tab
local OtherScriptsTab = Window:CreateTab("Other Scripts", "archive")

OtherScriptsTab:CreateButton({
   Name = "Redz Hub",
   Callback = function()
      loadstring(game:HttpGet("https://raw.githubusercontent.com/realredz/BloxFruits/refs/heads/main/Source.lua"))()
   end
})

OtherScriptsTab:CreateButton({
   Name = "mspaint v4",
   Callback = function()
      loadstring(game:HttpGet("https://api.luarmor.net/files/v3/loaders/002c19202c9946e6047b0c6e0ad51f84.lua"))()
   end
})

-- Credits Tab
local CreditsTab = Window:CreateTab("Credits", "users")

CreditsTab:CreateLabel("Owner: @RobloxMultiverse_IV")
